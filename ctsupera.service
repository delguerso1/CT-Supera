[Unit]
Description=CT Supera Django Application
After=network.target

[Service]
Type=notify
User=ubuntu
Group=ubuntu
WorkingDirectory=/home/ubuntu/ct-supera
Environment="PATH=/home/ubuntu/ct-supera/venv/bin"
Environment="DJANGO_SETTINGS_MODULE=app.settings_production"
ExecStart=/home/ubuntu/ct-supera/venv/bin/gunicorn app.wsgi:application --config gunicorn.conf.py
ExecReload=/bin/kill -s HUP $MAINPID
KillMode=mixed
TimeoutStopSec=5
PrivateTmp=true
Restart=always
RestartSec=10

[Install]
WantedBy=multi-user.target 